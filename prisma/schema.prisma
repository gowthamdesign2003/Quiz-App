generator client {
  provider   = "prisma-client-js"
}

// PostgreSQL Db
datasource db {
  provider = "postgresql"
}



model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  quizzes   Quiz[]
  attempts  QuizAttempt[]
}

model Quiz {
  id         Int        @id @default(autoincrement())
  topic      String
  difficulty String
  totalQs    Int
  createdAt  DateTime   @default(now())


  userId     Int?
  user       User?      @relation(fields: [userId], references: [id])

  questions  Question[]
  attempts   QuizAttempt[]
}

model Question {
  id             Int    @id @default(autoincrement())
  quizId         Int
  quiz           Quiz   @relation(fields: [quizId], references: [id])
  question       String
  options        Json
  correctAnswer  String
}

model QuizAttempt {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  quizId    Int
  quiz      Quiz     @relation(fields: [quizId], references: [id])
  score     Int
  responses Json
  createdAt DateTime @default(now())
}
