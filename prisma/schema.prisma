generator client {
  provider   = "prisma-client-js"
}

// PostgreSQL Db
datasource db {
  provider = "postgresql"
}



model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  quizzes   Quiz[]
}

model Quiz {
  id         Int        @id @default(autoincrement())
  topic      String
  difficulty String
  totalQs    Int
  createdAt  DateTime   @default(now())

  // ðŸ”¥ MAKE USER OPTIONAL
  userId     Int?
  user       User?      @relation(fields: [userId], references: [id])

  questions  Question[]
}



model Question {
  id             Int    @id @default(autoincrement())
  quizId         Int
  quiz           Quiz   @relation(fields: [quizId], references: [id])
  question       String
  options        Json
  correctAnswer  String
}
